GridLayout:
	cols: 1
	textBox: textBox
	TextInput:
		id: textBox
		multiline: False
		size_hint: (.2, None)
    	height: 60
	GridLayout:
		cols: 2
		GridLayout:
			cols: 3
			Button:
				text: '7'
				on_release: app.appendText('7', None, 1, None)
			Button:
				text: '8'
				on_release: app.appendText('8', None, 1, None)
			Button:
				text: '9'
				on_release: app.appendText('9', None, 1, None)
			Button:
				text: '4'
				on_release: app.appendText('4', None, 1, None)
			Button:
				text: '5'
				on_release: app.appendText('5', None, 1, None)
			Button:
				text: '6'
				on_release: app.appendText('6', None, 1, None)
			Button:
				text: '1'
				on_release: app.appendText('1', None, 1, None)
			Button:
				text: '2'
				on_release: app.appendText('2', None, 1, None)
			Button:
				text: '3'
				on_release: app.appendText('3', None, 1, None)
			Button:
				text: '0'
				on_release: app.appendText('0', None, 1, None)
			Button:
				text: '='
				on_release: app.appendText('=', None, None, None)
			Button:
				text: '.'
				on_release: app.appendText('.', None, 1, None)
		GridLayout:
			cols: 3
			Button:
				text: '+'
				on_release: app.appendText('+', None, 1, None)
			Button:
				text: '-'
				on_release: app.appendText('-', None, 1, None)
			Button:
				text: '*'
				on_release: app.appendText('*', None, 1, None)
			Button:
				text: '/'
				on_release: app.appendText('/', None, 1, None)
			Button:
				text: 'sin\u03B8'
				on_release: app.appendText('sin(', None, 4, None)
			Button:
				text: 'cos\u03B8'
				on_release: app.appendText('cos(', None, 4, None)
			Button:
				text: 'tan\u03B8'
				on_release: app.appendText('tan(', None, 4, None)
			Button:
				text: 'asin\u03B8'
				on_release: app.appendText('asin(', 'sin\u207B\u00B9(', 5, 6)
			Button:
				text: 'acos\u03B8'
				on_release: app.appendText('acos(', 'cos\u207B\u00B9(', 5, 6)
			Button:
				text: 'atan\u03B8'
				on_release: app.appendText('atan(', 'tan\u207B\u00B9(', 5, 6)
			Button:
				text: '^'
				on_release: app.appendText('**', '^', 2, 1)
			Button:
				text: '√'
				on_release: app.appendText('math.sqrt(', '√', 10, 1)
			Button:
				text: '('
				on_release: app.appendText('(', None, 1, None)
			Button:
				text: ')'
				on_release: app.appendText(')', None, 1, None)
			Button:
				text: 'π'
				on_release: app.appendText('math.pi', 'π', 7, 1)
			Button:
				text: 'ans'
				on_release: app.appendText('ans', None, 3, None)
			Button:
				text: 'expand brackets'
				on_release: app.appendText('expndbrcts', None, None, None)
			Button:
				text: 'Solve quadratic equation'
				on_release: app.appendText('quadEqu', None, None, None)
			Button:
				text: 'delete'
				on_release: app.appendText('del', None, None, None)
			Button:
				text: 'clear'
				on_release: app.appendText('clr', None, None, None)
			
			Spinner:
				text: 'Regular'
				id: spnr
				on_text: app.changeSpinner(spnr.text)
				values: ['Regular', 'Expanding Brackets']
